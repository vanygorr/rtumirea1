#include <iostream>

template <typename T>
void swapValues(T& a, T& b) {
    T temp = a;
    a = b;
    b = temp;
}

int main() {
    int a = 5, b = 10;
    std::cout << "Before swap: a = " << a << ", b = " << b << "\n";
    swapValues(a, b);
    std::cout << "After swap: a = " << a << ", b = " << b << "\n";

    double x = 1.5, y = 3.7;
    std::cout << "Before swap: x = " << x << ", y = " << y << "\n";
    swapValues(x, y);
    std::cout << "After swap: x = " << x << ", y = " << y << "\n";

    return 0;
}
