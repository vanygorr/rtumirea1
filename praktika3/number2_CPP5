#include <iostream>
#include <cstdlib>

int main() {
    int r;
    int chet = 0;
    int nechet = 0;
    std::cout << "Размер массива?" << "\n";
    std::cin >> r;
    int arr[r];
    for (int i = 0; i < r; i++) {
        arr[i] = rand()%10;
        if (arr[i] % 2 == 0) {
            chet++; }
        else {
            nechet++; }        
    }
    std::cout << "Чётных:" << chet << " " << "Нечётных:" << nechet;
}
